<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.employeemanagementsystem.HelloController" spacing="10" alignment="CENTER">
    <TextField fx:id="nameTextField" promptText="Employee Name" />
    <ComboBox fx:id="typeComboBox" promptText="Employee Type" />
    <TextField fx:id="salaryTextField" promptText="Salary (Full-Time)" />
    <TextField fx:id="hoursWorkedTextField" promptText="Hours Worked (Part-Time)" />
    <TextField fx:id="hourlyRateTextField" promptText="Hourly Rate" />
    <TextField fx:id="maxHoursTextField" promptText="Max Hours (Contractor)" />

    <Button text="Add Employee" onAction="#addEmployee" />

    <TableView fx:id="employeeTable" prefWidth="600.0" prefHeight="400.0">
        <columns>
            <TableColumn fx:id="nameColumn" text="Employee Name" prefWidth="150.0"/>
            <TableColumn fx:id="typeColumn" text="Employee Type" prefWidth="150.0"/>
            <TableColumn fx:id="salaryColumn" text="Salary" prefWidth="150.0"/>
            <TableColumn fx:id="removeColumn" text="Remove" prefWidth="100.0"/>
        </columns>
    </TableView>
</VBox>
